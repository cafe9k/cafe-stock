{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"lib": ["ES2020"],
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "../dist-electron",
		"rootDir": ".",
		"types": ["node"]
	},
	"include": ["main.ts", "preload.ts"],
	"exclude": ["node_modules"]
}

