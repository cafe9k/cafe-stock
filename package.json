{
	"name": "cafe-stock",
	"version": "1.0.0",
	"description": "Electron App Shell",
	"main": "dist-electron/main.js",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"electron:dev": "tsc -p electron/tsconfig.json && electron .",
		"electron:preview": "npm run build && electron .",
		"build": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder --mac",
		"build:dir": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder --mac --dir",
		"preview": "vite preview",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"@vitejs/plugin-react": "^4.2.1",
		"dotenv": "^17.2.3",
		"electron": "^28.0.0",
		"electron-builder": "^24.0.0",
		"eslint": "^8.55.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"typescript": "^5.2.2",
		"vite": "^5.0.8",
		"vite-plugin-electron": "^0.28.0",
		"vite-plugin-electron-renderer": "^0.14.0"
	},
	"build": {
		"appId": "com.cafestock.app",
		"productName": "Electron App",
		"mac": {
			"category": "public.app-category.finance",
			"target": [
				"dmg",
				"zip"
			],
			"icon": "build/icon.icns"
		},
		"files": [
			"dist/**/*",
			"dist-electron/**/*"
		],
		"directories": {
			"buildResources": "build",
			"output": "release"
		}
	}
}
