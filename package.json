{
	"name": "cafe-stock",
	"version": "1.0.0",
	"description": "Electron App Shell",
	"main": "dist-electron/main.js",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"electron:dev": "tsc -p electron/tsconfig.json && electron .",
		"electron:preview": "npm run build && electron .",
		"start": "npm run dev",
		"build": "tsc && tsc -p electron/tsconfig.json --noEmit && vite build && electron-builder --mac --publish never",
		"build:dir": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder --mac --dir",
		"preview": "vite preview",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
	},
	"dependencies": {
		"@ant-design/icons": "^6.1.0",
		"antd": "^6.1.0",
		"better-sqlite3": "^12.5.0",
		"clsx": "^2.1.1",
		"electron-updater": "^6.6.2",
		"electron-window-state": "^5.0.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^7.10.1",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@types/better-sqlite3": "^7.6.13",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.22",
		"dotenv": "^17.2.3",
		"electron": "^28.0.0",
		"electron-builder": "^24.0.0",
		"eslint": "^8.55.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.2.2",
		"vite": "^5.0.8",
		"vite-plugin-electron": "^0.28.0",
		"vite-plugin-electron-renderer": "^0.14.0"
	},
	"build": {
		"appId": "com.cafestock.app",
		"productName": "酷咖啡",
		"mac": {
			"category": "public.app-category.finance",
			"target": [
				"dmg",
				"zip"
			],
			"icon": "build/icon.icns",
			"hardenedRuntime": true,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"gatekeeperAssess": false
		},
		"publish": [
			{
				"provider": "github",
				"owner": "cafe9k",
				"repo": "cafe-stock"
			}
		],
		"files": [
			"dist/**/*",
			"dist-electron/**/*"
		],
		"directories": {
			"buildResources": "build",
			"output": "release"
		}
	}
}
